<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="OpenWorkouts"
      metal:use-macro="load: base.pt"
      tal:attributes="lang request.locale_name">

  <metal:head-title metal:fill-slot="head-title">
    <tal:t i18n:translate="">My profile</tal:t>
  </metal:head-title>

  <metal:css metal:fill-slot="css">
    <link rel="stylesheet" href="${request.static_url('ow:static/components/jquery-dropdown/jquery.dropdown.css')}" />
  </metal:css>

  <metal:content metal:fill-slot="content">

    <div class="user-profile">
      <div class="user-profile-account">
        <div>
          <tal:c tal:condition="getattr(user, 'picture', None)">
            <img tal:attributes="src request.resource_path(user, 'picture', query={'size': 200})"
                 width="450" />
          </tal:c>
          <div>
            <h2>
              <tal:fullname tal:content="user.fullname"></tal:fullname>
            </h2>
            <p>
              <tal:has-nickname tal:condition="user.nickname">
                <a href=""
                   tal:attributes="href request.resource_url(request.root, 'profile', user.nickname)"
                   tal:content="request.resource_url(request.root, 'profile', user.nickname)">
                </a> |
              </tal:has-nickname>
              <span><tal:email tal:content="user.email"></tal:email></span>
            </p>
            <div class="profile-bio">
              <p tal:repeat="paragraph getattr(user, 'bio', '').split('\n')"
                 tal:content="paragraph"></p>
            </div>
            <ul class="workout-options">
              <li><a href=""
                     tal:attributes="href request.resource_url(user, 'edit')"
                     i18n:translate="">edit profile</a></li>
              <li><a href=""
                     tal:attributes="href request.resource_url(user, 'passwd')"
                     i18n:translate="">change password</a></li>
            </ul>
          </div>
          <div class="calendar-heatmap js-calendar-heatmap">
          </div>
          <div class="calendar-heatmap-tooltip js-calendar-heatmap-tooltip">
            <ul class="profile-data">
              <li>
                <span class="js-ch-tooltip-date"></span>
              </li>
              <li>
                <span><tal:t i18n:translate="">Workouts:</tal:t></span>
                <span class="js-ch-tooltip-workouts"></span>
              </li>
              <li>
                <span><tal:t i18n:translate="">Time:</tal:t></span>
                <span class="js-ch-tooltip-time"></span>
              </li>
              <li>
                <span><tal:t i18n:translate="">Distance:</tal:t></span>
                <span class="js-ch-tooltip-distance"></span>
              </li>
              <li>
                <span><tal:t i18n:translate="">Elevation:</tal:t></span>
                <span class="js-ch-tooltip-elevation"></span>
              </li>
            </ul>
          </div>
        </div>

      </div>

      <div class="workout-content">
        <div class="workout-list">
          <div class="total-workouts">
            <span>
              <tal:w tal:replace="len(workouts)"></tal:w>
              <tal:t i18n:translate="">workouts</tal:t>
            </span>
            <span>
              <tal:hms tal:define="hms timedelta_to_hms(totals['time'])">
                <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                <tal:t i18n:translate="">hours</tal:t>,
                <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                <tal:t i18n:translate="">min.</tal:t>
              </tal:hms>
            </span>
            <span>
              <tal:w tal:replace="round(totals['distance'])"></tal:w>
              <tal:t i18n:translate="">km</tal:t>
            </span>
            <span>
              <tal:w tal:replace="round(totals['elevation'])"></tal:w>
              <tal:t i18n:translate="">m</tal:t>
            </span>
          </div>

          <div class="month-stats js-month-stats">
            <div class="svg-content">
              <svg width="900" height="180" viewBox="0 0 900 180"></svg>
            </div>
            <div class="center">
              <ul class="workout-options filters js-filters">
                <li><a href="#" class="js-distance is-active" i18n:translate="">distance</a></li>
                <li><a href="#" class="js-time" i18n:translate="">time</a></li>
                <li><a href="#" class="js-elevation" i18n:translate="">elevation</a></li>
              </ul>

              <ul class="workout-options switcher js-switcher"
                  tal:define="weekly 'week' in request.GET">
                <li>
                  <a href="#" class="" i18n:translate=""
                     tal:attributes="class 'js-weekly is-active' if weekly else 'js-weekly'">
                    weekly</a></li>
                <li>
                  <a href="#" class="" i18n:translate=""
                     tal:attributes="class 'js-monthly is-active' if not weekly else 'js-monthly'">
                    monthly</a></li>
              </ul>
            </div>
          </div>


          <tal:r tal:repeat="workout workouts">

            <article class="workout-resume">

              <h2 class="workout-title">
                <a href="" tal:content="workout.title"
                   tal:attributes="href request.resource_url(workout)"></a>
              </h2>

              <ul class="workout-info">
                <li>
                  <tal:c tal:content="workout.start_in_timezone(user.timezone)"></tal:c>
                </li>
                <li>
                  <!--! use the properly formatted duration instead of the timedelta object -->
                  <tal:c tal:content="workout._duration"></tal:c>
                </li>
                <li tal:condition="workout.distance">
                  <tal:c tal:content="workout.rounded_distance"></tal:c> km
                </li>
                <li tal:condition="workout.uphill">
                  +<tal:c tal:content="workout.uphill"></tal:c> m
                </li>
              </ul>

              <ul class="workout-info" tal:define="hr workout.hr; cad workout.cad">
                <li tal:condition="hr">
                  <span i18n:translate="">HR (bpm)</span>:
                  <tal:c tal:content="hr['avg']"></tal:c>
                  <tal:t i18n:translate="">Avg.</tal:t>,
                  <tal:c tal:content="hr['max']"></tal:c>
                  <tal:t i18n:translate="">Max.</tal:t>
                </li>
                <li tal:condition="cad">
                  <span i18n:translate="">Cad</span>:
                  <tal:c tal:content="cad['avg']"></tal:c>
                  <tal:t i18n:translate="">Avg.</tal:t>,
                  <tal:c tal:content="cad['max']"></tal:c>
                  <tal:t i18n:translate="">Max.</tal:t>
                </li>
              </ul>

              <div class="workout-intro">
                <p tal:repeat="paragraph workout.trimmed_notes.split('\n')"
                   tal:content="paragraph"></p>
              </div>

              <div class="workout-map" tal:condition="workout.has_gpx">
                <a href="" tal:attributes="href request.resource_url(workout)">
                  <tal:has-screenshot tal:condition="workout.map_screenshot is not None">
                    <img src="" tal:attributes="src request.static_url(workout.map_screenshot);
                              alt workout.title; title workout.title">
                  </tal:has-screenshot>
                  <tal:has-not-screenshot tal:condition="workout.map_screenshot is None">
                    <img src="" tal:attributes="src request.static_url('ow:static/media/img/no_map.gif');
                              alt workout.title; title workout.title; class 'js-needs-map'">
                  </tal:has-not-screenshot>
                </a>
              </div>

            </article>

          </tal:r>
        </div>

        <div class="workout-aside">

          <h3 i18n:translate="">Profile info</h3>

          <ul class="profile-data">
            <li>
              <span><tal:t i18n:translate="">Gender:</tal:t></span>
              <tal:c tal:content="user_gender"></tal:c>
            </li>
            <li tal:define="birth_date getattr(user, 'birth_date', None)">
              <span><tal:t i18n:translate="">Birth date:</tal:t></span>
              <tal:c tal:condition="birth_date"
                     tal:content="birth_date.strftime('%d/%m/%Y')"></tal:c>
              <tal:c tal:condition="birth_date is None">-</tal:c>
            </li>
            <li>
              <span><tal:t i18n:translate="">Height:</tal:t></span>
              <tal:c tal:content="getattr(user, 'height', '-')"></tal:c> meters
            </li>
            <li>
              <span><tal:t i18n:translate="">Weight:</tal:t></span>
              <tal:c tal:content="getattr(user, 'weight', '-')"></tal:c> kg
            </li>
          </ul>

          <tal:has-workouts tal:condition="profile_stats['sports']">

            <h3 i18n:translate="">Workout stats</h3>

            <p>
              <a href="" data-jq-dropdown="#jq-dropdown-sports"
                 class="profile-dropdown-sports js-jq-dropdown-sel-sports">
                <strong tal:content="profile_stats['current_sport']"></strong>
                <i class="arrow down"></i>
              </a>
            </p>

            <tal:sports tal:repeat="sport profile_stats['sports']">
              <div class="" tal:attributes="class 'js-sport-stats js-' + sport">

                <a href="" data-jq-dropdown=""
                   tal:attributes="data-jq-dropdown '#jq-dropdown-' + sport;
                         class 'profile-dropdown-years js-jq-dropdown-sel-' + sport">
                  <strong tal:content="profile_stats['current_year']"></strong>
                  <i class="arrow down"></i>
                </a>

                <tal:years tal:repeat="year profile_stats['years']">
                  <div class="" tal:attributes="class 'js-year-stats js-' + sport + '-' + str(year)">
                    <ul class="profile-data"
                        tal:define="sport_totals user.sport_totals(sport, year)">
                      <li>
                        <span>
                          <tal:t i18n:translate="">Workouts</tal:t>
                        </span>
                        <tal:w tal:replace="sport_totals['workouts']"></tal:w>
                      </li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Time</tal:t>
                        </span>
                        <tal:hms tal:define="hms timedelta_to_hms(sport_totals['time'])">
                          <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                          <tal:t i18n:translate="">hours</tal:t>,
                          <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                          <tal:t i18n:translate="">min.</tal:t>
                        </tal:hms>
                      </li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Distance</tal:t>
                        </span>
                        <tal:w tal:replace="round(sport_totals['distance'])"></tal:w>
                        <tal:t i18n:translate="">km</tal:t>
                      </li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Elevation</tal:t>
                        </span>
                        <tal:w tal:replace="round(sport_totals['elevation'])"></tal:w>
                        <tal:t i18n:translate="">m</tal:t>
                      </li>
                      <li><span i18n:translate="">Single workout records:</span></li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Farthest distance</tal:t>
                        </span>
                        <tal:has-wid tal:condition="sport_totals['max_distance_wid'] is not None">
                          <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_distance_wid']])">
                            <tal:w tal:replace="round(sport_totals['max_distance'])"></tal:w>
                            <tal:t i18n:translate="">km</tal:t>
                          </a>
                        </tal:has-wid>
                        <tal:has-not-wid tal:condition="sport_totals['max_distance_wid'] is None">
                          <tal:w tal:replace="round(sport_totals['max_distance'])"></tal:w>
                          <tal:t i18n:translate="">km</tal:t>
                        </tal:has-not-wid>
                      </li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Longer workout</tal:t>
                        </span>
                        <tal:has-wid tal:condition="sport_totals['max_time_wid'] is not None">
                          <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_time_wid']])">
                            <tal:hms tal:define="hms timedelta_to_hms(sport_totals['max_time'])">
                              <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                              <tal:t i18n:translate="">hours</tal:t>,
                              <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                              <tal:t i18n:translate="">min.</tal:t>
                            </tal:hms>
                          </a>
                        </tal:has-wid>
                        <tal:has-not-wid tal:condition="sport_totals['max_time_wid'] is None">
                          <tal:hms tal:define="hms timedelta_to_hms(sport_totals['max_time'])">
                            <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                            <tal:t i18n:translate="">hours</tal:t>,
                            <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                            <tal:t i18n:translate="">min.</tal:t>
                          </tal:hms>
                        </tal:has-not-wid>
                      </li>
                      <li>
                        <span>
                          <tal:t i18n:translate="">Higher elevation gain</tal:t>
                        </span>
                        <tal:has-wid tal:condition="sport_totals['max_elevation_wid'] is not None">
                          <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_elevation_wid']])">
                            <tal:w tal:replace="round(sport_totals['max_elevation'])"></tal:w>
                            <tal:t i18n:translate="">m</tal:t>
                          </a>
                        </tal:has-wid>
                        <tal:has-not-wid tal:condition="sport_totals['max_elevation_wid'] is None">
                          <tal:w tal:replace="round(sport_totals['max_elevation'])"></tal:w>
                          <tal:t i18n:translate="">m</tal:t>
                        </tal:has-not-wid>
                      </li>
                    </ul>
                  </div>
                </tal:years>

                <strong i18n:translate="">All time</strong>
                <ul class="profile-data"
                    tal:define="sport_totals user.sport_totals(sport)">
                  <li>
                    <span>
                      <tal:t i18n:translate="">Workouts</tal:t>
                    </span>
                    <tal:w tal:replace="sport_totals['workouts']"></tal:w>
                  </li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Time</tal:t>
                    </span>
                    <tal:hms tal:define="hms timedelta_to_hms(sport_totals['time'])">
                      <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                      <tal:t i18n:translate="">hours</tal:t>,
                      <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                      <tal:t i18n:translate="">min.</tal:t>
                    </tal:hms>
                  </li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Distance</tal:t>
                    </span>
                    <tal:w tal:replace="round(sport_totals['distance'])"></tal:w>
                    <tal:t i18n:translate="">km</tal:t>
                  </li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Elevation</tal:t>
                    </span>
                    <tal:w tal:replace="round(sport_totals['elevation'])"></tal:w>
                    <tal:t i18n:translate="">m</tal:t>
                  </li>
                  <li><span i18n:translate="">Single workout records:</span></li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Farthest distance</tal:t>
                    </span>
                    <tal:has-wid tal:condition="sport_totals['max_distance_wid'] is not None">
                      <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_distance_wid']])">
                        <tal:w tal:replace="round(sport_totals['max_distance'])"></tal:w>
                        <tal:t i18n:translate="">km</tal:t>
                      </a>
                    </tal:has-wid>
                    <tal:has-not-wid tal:condition="sport_totals['max_distance_wid'] is None">
                      <tal:w tal:replace="round(sport_totals['max_distance'])"></tal:w>
                      <tal:t i18n:translate="">km</tal:t>
                    </tal:has-not-wid>
                  </li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Longer workout</tal:t>
                    </span>
                    <tal:has-wid tal:condition="sport_totals['max_time_wid'] is not None">
                      <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_time_wid']])">
                        <tal:hms tal:define="hms timedelta_to_hms(sport_totals['max_time'])">
                          <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                          <tal:t i18n:translate="">hours</tal:t>,
                          <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                          <tal:t i18n:translate="">min.</tal:t>
                        </tal:hms>
                      </a>
                    </tal:has-wid>
                    <tal:has-not-wid tal:condition="sport_totals['max_time_wid'] is None">
                      <tal:hms tal:define="hms timedelta_to_hms(sport_totals['max_time'])">
                        <tal:h tal:content="str(hms[0]).zfill(2)"></tal:h>
                        <tal:t i18n:translate="">hours</tal:t>,
                        <tal:h tal:content="str(hms[1]).zfill(2)"></tal:h>
                        <tal:t i18n:translate="">min.</tal:t>
                      </tal:hms>
                    </tal:has-not-wid>
                  </li>
                  <li>
                    <span>
                      <tal:t i18n:translate="">Higher elevation gain</tal:t>
                    </span>
                    <tal:has-wid tal:condition="sport_totals['max_elevation_wid'] is not None">
                      <a href="" tal:attributes="href request.resource_url(user[sport_totals['max_elevation_wid']])">
                        <tal:w tal:replace="round(sport_totals['max_elevation'])"></tal:w>
                        <tal:t i18n:translate="">m</tal:t>
                      </a>
                    </tal:has-wid>
                    <tal:has-not-wid tal:condition="sport_totals['max_elevation_wid'] is None">
                      <tal:w tal:replace="round(sport_totals['max_elevation'])"></tal:w>
                      <tal:t i18n:translate="">m</tal:t>
                    </tal:has-not-wid>
                  </li>
                </ul>
              </div>
            </tal:sports>

          </tal:has-workouts>

        </div>
      </div>
    </div>

      <div id="jq-dropdown-sports" class="jq-dropdown jq-dropdown-tip">
        <ul class="jq-dropdown-menu">
          <tal:sports tal:repeat="sport profile_stats['sports']">
            <li>
              <a href="#" class="" tal:content="sport"
                 tal:attributes="class 'js-choose-sport-stats js-' + sport">
              </a>
            </li>
          </tal:sports>
        </ul>
      </div>


    <tal:sports tal:repeat="sport profile_stats['sports']">
      <div id="" class="jq-dropdown jq-dropdown-tip"
           tal:attributes="id 'jq-dropdown-' + sport">
        <ul class="jq-dropdown-menu">
          <tal:years tal:repeat="year profile_stats['years']">
            <li>
              <a href="#" class="" tal:content="year"
                 tal:attributes="class 'js-choose-year-stats js-' + sport + '-' + str(year)">
              </a>
            </li>
          </tal:years>
        </ul>
      </div>
    </tal:sports>


  </metal:content>

  <metal:body-js metal:fill-slot="body-js">

    <script src="${request.static_url('ow:static/components/jquery-dropdown/jquery.dropdown.js')}"></script>
    <script src="${request.static_url('ow:static/components/d3/d3.min.js')}"></script>
    <script src="${request.static_url('ow:static/js/ow.js')}"></script>

    <script type="text/javascript">
     var map_shots = owjs.map_shots({
         img_selector: 'img.js-needs-map',
     })
     map_shots.run();

     var sport_stats = owjs.sport_stats({
         link_selector: 'a.js-choose-sport-stats',
         stats_selector: 'div.js-sport-stats',
         selected: 'div.js-sport-stats.js-${profile_stats['current_sport']}',
         dropdown_selector: 'a.js-jq-dropdown-sel-sports',
         current_year: '${profile_stats['current_year']}',
         year_link_selector: 'a.js-choose-year-stats.js-'
     })
     sport_stats.setup();

     var heatmap_chart = owjs.calendar_heatmap_chart({
         chart_selector: 'div.js-calendar-heatmap',
         url: "${request.resource_url(user, 'month')}",
         // Trick to have all those shortened day names translated
         day_names_list: "${_('Mo Tu We Th Fr Sa Su')}".split(' ')
     });
     heatmap_chart.render();

     var year_stats = owjs.year_stats({
         link_selector: 'a.js-choose-year-stats',
         stats_selector: 'div.js-year-stats',
         selected: 'div.js-year-stats.js-${profile_stats['current_sport']}-${profile_stats['current_year']}',
         dropdown_selector: 'a.js-jq-dropdown-sel-'
     })
     year_stats.setup();

     var y_axis_labels = {
         "distance": "Kilometers",
         "time": "Hours",
         "elevation": "Meters"
     };

     var year_chart = owjs.year_chart({
         chart_selector: '.js-month-stats svg',
         filters_selector: '.js-month-stats .js-filters a',
         switcher_selector: '.js-month-stats .js-switcher a',
         is_active_class: 'is-active',
         urls: {"monthly": "${request.resource_url(user, 'monthly')}",
                "weekly": "${request.resource_url(user, 'weekly')}"},
         current_month: "${current_month}",
         current_week: "${current_week}",
         y_axis_labels: y_axis_labels,
         filter_by: "distance",
         url: "${'monthly' if current_week is None else 'weekly'}",
     });
     year_chart.render("distance", "${'monthly' if current_week is None else 'weekly'}");
     year_chart.filters_setup();
     year_chart.switcher_setup();
    </script>

  </metal:body-js>

</html>
